@model IEnumerable<ClaimApp.Models.Claim>

@{
    ViewData["Title"] = "Pending Claims";
}
<h2>Pending Claims</h2>
@if(TempData["Error"] != null){ <div class="alert alert-danger">@TempData["Error"]</div> }
<table class="table">
    <thead>
        <tr><th>Lecturer</th><th>Hours</th><th>Rate</th><th>Total</th><th>File</th><th>Submitted</th><th>Actions</th></tr>
    </thead>
    <tbody>
    @foreach(var c in Model)
    {
        <tr>
            <td>@c.LecturerId</td>
            <td>@c.HoursWorked</td>
            <td>@c.HourlyRate</td>
            <td>@c.Total</td>
            <td>
                @if(!string.IsNullOrEmpty(c.OriginalFileName)){
                    <a href="~/uploads/@c.UploadedFileName" target="_blank">@c.OriginalFileName</a>
                } else { <span>-</span> }
            </td>
            <td>@c.CreatedAt.ToLocalTime()</td>
            <td>
                <form asp-action="Approve" method="post" style="display:inline">
                    <input type="hidden" name="id" value="@c.Id" />
                    <button class="btn btn-success btn-sm">Approve</button>
                </form>
                <form asp-action="Reject" method="post" style="display:inline">
                    <input type="hidden" name="id" value="@c.Id" />
                    <button class="btn btn-danger btn-sm">Reject</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
