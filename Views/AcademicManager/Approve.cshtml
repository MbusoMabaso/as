@model IEnumerable<CMCS.Models.Claim>

<h2>Approve Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lecturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateSubmitted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lecturer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSubmitted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Details" asp-controller="Claim" asp-route-id="@item.ClaimID">Details</a> |
                <a asp-action="ApproveClaim" asp-route-id="@item.ClaimID">Approve</a> |
                <a asp-action="RejectClaim" asp-route-id="@item.ClaimID">Reject</a>
            </td>
        </tr>
}
    </tbody>
</table>
