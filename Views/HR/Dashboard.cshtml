@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container text-center py-5">
    <h1 class="display-4 fw-bold mb-3">Welcome to the HR Dashboard!</h1>
    <p class="lead mb-4">Manage academic personnel and system accounts from a centralized location.</p>
</div>

<div class="container mt-5">
    <div class="row text-center">
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm rounded-lg">
                <div class="card-body">
                    <i class="fas fa-chalkboard-teacher fa-4x text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Lecturers</h5>
                    <p class="card-text">View and manage all lecturer accounts and information.</p>
                    <a href="#" class="btn btn-primary rounded-lg">Manage Lecturers</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm rounded-lg">
                <div class="card-body">
                    <i class="fas fa-user-tie fa-4x text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Academic Managers</h5>
                    <p class="card-text">Manage academic manager profiles and their permissions.</p>
                    <a asp-controller="AcademicManager" asp-action="Index" class="btn btn-primary rounded-lg">Manage Managers</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm rounded-lg">
                <div class="card-body">
                    <i class="fas fa-users-cog fa-4x text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">All User Accounts</h5>
                    <p class="card-text">View and manage all user accounts within the system.</p>
                    <a asp-controller="Account" asp-action="Index" class="btn btn-primary rounded-lg">Manage Accounts</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
